C*******************************************************************************
C                  GROUNDWATER BOUNDARY CONDITIONS MAIN FILE
C
C             Generated by pyiwfm
C             {{ generation_time }}
C*******************************************************************************
C
C   NSHBC   ; Number of specified head boundary conditions
C   NSFBC   ; Number of specified flow boundary conditions
C   NGHBC   ; Number of general head boundary conditions
C   NCGHBC  ; Number of constrained general head BCs
C   NTSBCFL ; Number of time series BC files
C
C-------------------------------------------------------------------------------
    {{ n_spec_head | fortran_int(10) }}                         / NSHBC
    {{ n_spec_flow | fortran_int(10) }}                         / NSFBC
    {{ n_gen_head | fortran_int(10) }}                         / NGHBC
    {{ n_constrained_gh | fortran_int(10) }}                         / NCGHBC
    {{ n_tsbc_files | fortran_int(10) }}                         / NTSBCFL
{% if n_spec_head > 0 %}
C-------------------------------------------------------------------------------
C   Specified Head Boundary Conditions
C-------------------------------------------------------------------------------
    {{ spec_head_bc_file | pad_right(40) }} / SHBCFL
    {{ spec_head_tsd_file | pad_right(40) }} / SHBCTSDFL
{% endif %}
{% if n_spec_flow > 0 %}
C-------------------------------------------------------------------------------
C   Specified Flow Boundary Conditions
C-------------------------------------------------------------------------------
    {{ spec_flow_bc_file | pad_right(40) }} / SFBCFL
    {{ spec_flow_tsd_file | pad_right(40) }} / SFBCTSDFL
{% endif %}
{% if n_gen_head > 0 %}
C-------------------------------------------------------------------------------
C   General Head Boundary Conditions
C-------------------------------------------------------------------------------
    {{ gen_head_bc_file | pad_right(40) }} / GHBCFL
    {{ gen_head_tsd_file | pad_right(40) }} / GHBCTSDFL
{% endif %}
{% if n_constrained_gh > 0 %}
C-------------------------------------------------------------------------------
C   Constrained General Head Boundary Conditions
C-------------------------------------------------------------------------------
    {{ constrained_gh_bc_file | pad_right(40) }} / CGHBCFL
    {{ constrained_gh_tsd_file | pad_right(40) }} / CGHBCTSDFL
{% endif %}
{% if n_tsbc_files > 0 %}
C-------------------------------------------------------------------------------
C   Time Series Boundary Condition Files
C-------------------------------------------------------------------------------
{% for tsbc in tsbc_files %}
    {{ tsbc | pad_right(40) }} / TSBCFL
{% endfor %}
{% endif %}
{% if boundary_node_output %}
C-------------------------------------------------------------------------------
C   Boundary Node Output
C-------------------------------------------------------------------------------
    {{ n_bc_output_nodes | fortran_int(10) }}                         / NBCOUTND
    {{ bc_output_file | pad_right(40) }} / BCOUTFL
{% for node in bc_output_nodes %}
    {{ node | fortran_int(6) }}
{% endfor %}
{% endif %}
